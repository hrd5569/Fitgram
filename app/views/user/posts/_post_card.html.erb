<div class="card mb-3 bg-transparent border-0 shadow-lg custom-background">
  <div class="card-body p-4 rounded-lg">
    <div class="mb-5 bg-white rounded-lg">
      <!-- 投稿内容の詳細 -->
      <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
          <%= image_tag post.user.get_profile_image(50, 50), size: "60x60", class: "rounded-circle mr-2" %>
          <div>
            <strong><%= post.user.name %></strong>
            <p><small class="text-muted"><%= post.user.followers.count %> フォロワー</small></p>
          </div>
        </div>
        <% unless post.user == current_user %>
          <% if current_user.following?(post.user) %>
            <%= link_to 'フォロー解除', unfollow_user_path(post.user.id), method: :delete, class: "btn btn-outline-primary btn-sm" %>
          <% else %>
            <%= link_to 'フォローする', follow_user_path(post.user.id), method: :post, class: "btn btn-outline-primary btn-sm" %>
          <% end %>
        <% end %>
      </div>
      <%= link_to post_path(post) do %>
        <%= image_tag post.get_resized_image(1000, 1000), class: "card-img-top img-fluid custom-image" %>
      <% end %>
      <div class="card-body">
        <div class="d-flex">
          <div id="favorite_<%= post.id %>">
            <% favorite = post.favorites.find_by(user_id: current_user.id) %>
            <% if favorite %>
              <%= render 'user/posts/unfavorite', post: post %>
            <% else %>
              <%= render 'user/posts/favorite', post: post %>
            <% end %>
          </div>
          <span class="mr-2"><%= post.favorites.count %> いいね</span>
          <span><%= post.comments.count %> コメント</span>
        </div>
        <!-- タグの表示 -->
        <div class="mt-2">
          <% post.tags.each do |tag| %>
            <span class="badge badge-secondary"><%= tag.name %></span>
          <% end %>
        </div>
        <p class="card-text mt-2"><%= post.caption %></p>
      </div>
    </div>
  </div>
</div>
