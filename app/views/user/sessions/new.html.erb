<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 mx-auto">

      <div class="card">
        <div class="card-header text-center">
          <h3 class="m-0">Log in</h3>
        </div>
        <div class="card-body">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :name, "ユーザー名" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Log in", class: "btn btn-warning btn-block" %>
            </div>
          <% end %>


          <%= render "user/shared/links" %>

        </div>
      </div>

    </div>
  </div>
</div>