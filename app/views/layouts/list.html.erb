<div class="card-list-containar py-5">
  <% images.each do |image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to user_path(image.id) do %>
      <%= image_tag image.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag image.user.get_profile_image(100,100), class:"mt-3 rounded-circle";  %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(user_path(image.id), class:"text-dark") do %>
            shop_nameはPostImageのimage_titleに変更
              <strong><i class="far fa-flag"></i><span> <%= post.image_title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= posts.caption %></p>
          <span><i class="fas fa-user"></i> By <%= image.user.name %> ｜ </span>
          <span><%= link_to "#{image.comments.count} コメント", user_path(image.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate post_images %>
</div>