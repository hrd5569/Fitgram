<div class="container">
  <h1 class="text-center mb-4"><%= @user.name %> の詳細情報</h1>

  <div class="mb-3 text-center">
    <strong>名前:</strong>
    <p><%= @user.name %></p>
  </div>

  <div class="mb-3 text-center">
    <strong>メールアドレス:</strong>
    <p><%= @user.email %></p>
  </div>

  <div class="mb-3 text-center">
    <strong>身長:</strong>
    <p><%= @user.height %></p>
  </div>

  <div class="mb-3 text-center">
    <strong>体重:</strong>
    <p><%= @user.weight %></p>
  </div>

  <div class="mb-3 text-center">
    <strong>年齢:</strong>
    <p><%= @user.age %></p>
  </div>

  <div class="mb-3 text-center">
    <strong>性別:</strong>
    <p><%= @user.gender %></p>
  </div>

  <div class="text-center">
    <div class="btn-group" role="group" aria-label="User Actions">
      <%= link_to '編集', edit_admin_user_path(@user), class: 'btn btn-primary mb-1' %>
      <%= link_to '戻る', admin_users_path, class: 'btn btn-primary mb-1 ml-1' %>
      <%= link_to '退会', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger mb-1 ml-5' %>
    </div>
  </div>
</div>